@model study4_be.Models.ViewModel.StaffEditViewModel
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>


<div class="form-horizontal">
    <h4>Staff</h4>
    <hr />
    <div class="card-body">
        <form asp-action="Staff_Edit" method="post" enctype="multipart/form-data" class="forms-sample">
            <input type="hidden" asp-for="StaffCmnd" />
            <div class="form-group">
                <label for="StaffName">Name</label>
                <input asp-for="Staff.StaffName" class="form-control" />
                <span asp-validation-for="Staff.StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StaffType">Type</label>
                <input asp-for="Staff.StaffType" class="form-control" />
                <span asp-validation-for="Staff.StaffType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StaffEmail">Email</label>
                <input asp-for="Staff.StaffEmail" class="form-control" />
                <span asp-validation-for="Staff.StaffEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StaffCmnd">CMND</label>
                <input asp-for="Staff.StaffCmnd" class="form-control" />
                <span asp-validation-for="Staff.StaffCmnd" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label for="Department">Department</label>
                <select asp-for="Department" class="form-control" asp-items="Model.DepartmentId"></select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div> *@
            <div class="flex">
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @Html.ActionLink("Cancel", "Unit_List", "Unit", null, new { @class = "btn btn-light" })
            </div>
        </form>
    </div>
</div>