@model study4_be.Models.Department

<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>

<div class="form-horizontal">
    <h4>Course</h4>
    <hr />
    <div class="card-body">
        <p class="card-description">Edit</p>
        <form asp-action="Course_Edit" method="post" enctype="multipart/form-data" class="forms-sample">
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group">
                <label for="DepartmentName">DepartmentName</label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="flex">
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @Html.ActionLink("Cancel", "Department_List", "Department", null, new { @class = "btn btn-light" })
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
