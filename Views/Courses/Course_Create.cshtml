@model study4_be.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<h2>Course Create</h2>

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-body">
            <p class="card-description">Create</p>
            <form asp-action="Course_Create" method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label for="CourseName">Name</label>
                    <input asp-for="CourseName" class="form-control" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CourseDescription">Description</label>
                    <input asp-for="CourseDescription" class="form-control" />
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CoursePrice">Price</label>
                    <input asp-for="CoursePrice" class="form-control" />
                    <span asp-validation-for="CoursePrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CourseSale">Sale</label>
                    <input asp-for="CourseSale" class="form-control" />
                    <span asp-validation-for="CourseSale" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CourseTag">Tag</label>
                    <input asp-for="CourseTag" class="form-control" />
                    <span asp-validation-for="CourseTag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for ="CourseImage">File upload</label>
                    <img src="https://thesavvyimg.co.uk/wp-content/uploads/2022/08/the-savvy-img-online-courses-masterclass-shortcut-plab-gmc-registration.png" height="150" width="150" id="previewImg" />
                    <input asp-for="CourseImage" type="file" name="CourseImage" onchange="ChangeImage(this, document.getElementById('previewImg'))"/>
                </div>
                <div class="flex">
                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    @Html.ActionLink("Cancel", "Course_List", "Courses", null, new { @class = "btn btn-light" })
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function ChangeImage(UploadImage, previewImg) {
        if (UploadImage.files && UploadImage.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('previewImg').setAttribute('src', e.target.result);
            }
            reader.readAsDataURL(UploadImage.files[0])
        }
    }
</script>
