@model study4_be.Models.Question
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>


<div class="form-horizontal">
    <h4>Question</h4>
    <hr />
    <div class="card-body">
        <p class="card-description"> Edit</p>
        <form asp-action="Question_Exam_Edit" method="post" enctype="multipart/form-data" class="forms-sample">
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <label for="QuestionText">QuestionText</label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="QuestionParagraph">QuestionParagraph</label>
                <input asp-for="QuestionParagraph" class="form-control" />
                <span asp-validation-for="QuestionParagraph" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionA">OptionA</label>
                <input asp-for="OptionA" class="form-control" />
                <span asp-validation-for="OptionA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionB">OptionB</label>
                <input asp-for="OptionB" class="form-control" />
                <span asp-validation-for="OptionB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionC">OptionC</label>
                <input asp-for="OptionC" class="form-control" />
                <span asp-validation-for="OptionC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionD">OptionD</label>
                <input asp-for="OptionD" class="form-control" />
                <span asp-validation-for="OptionD" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CorrectAnswer">Select Answer:</label>
                <select asp-for="CorrectAnswer" class="form-control">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="QuestionTag">Select Part:</label>
                <select asp-for="QuestionTag" class="form-control">
                    <option value="Part 1">Part 1</option>
                    <option value="Part 2">Part 2</option>
                    <option value="Part 3">Part 3</option>
                    <option value="Part 4">Part 4</option>
                    <option value="Part 5">Part 5</option>
                    <option value="Part 6">Part 6</option>
                    <option value="Part 7">Part 7</option>
                </select>
                <span asp-validation-for="QuestionTag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>File upload</label>
                <img src="@Model.QuestionImage" height="150" width="150" id="previewImg" />
                <input asp-for="QuestionImage" type="file" name="QuestionImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
            </div>
            <div class="flex">
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @Html.ActionLink("Cancel", "Question_Exam_List", "Question_Exam", null, new { @class = "btn btn-light" })
            </div>
        </form>
    </div>
</div>

<script>
    function ChangeImage(input, previewImg) {
        var reader = new FileReader();
        reader.onload = function (e) {
            previewImg.src = e.target.result;
        };
        reader.readAsDataURL(input.files[0]);
    }
</script>
