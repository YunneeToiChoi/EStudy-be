@model study4_be.Models.Quiz
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>

<h2>Course Create</h2>


<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-body">
            <p class="card-description">Create </p>
            <form asp-action="Quizzes_Create" method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label for="QuizzesId">QuizzesId</label>
                    <input asp-for="QuizzesId" class="form-control" />
                    <span asp-validation-for="QuizzesId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="DescriptionQuizzes">DescriptionQuizzes</label>
                    <input asp-for="DescriptionQuizzes" class="form-control" />
                    <span asp-validation-for="DescriptionQuizzes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="CreatedTime">CreatedTime</label>
                    <input asp-for="CreatedTime" class="form-control" />
                    <span asp-validation-for="CreatedTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="LessonId">LessonId</label>
                    <input asp-for="LessonId" class="form-control" />
                    <span asp-validation-for="LessonId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Lesson">Lesson</label>
                    <input asp-for="Lesson" class="form-control" />
                    <span asp-validation-for="Lesson" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Questions">Questions</label>
                    <input asp-for="Questions" class="form-control" />
                    <span asp-validation-for="Questions" class="text-danger"></span>
                </div>
                <div class="flex">
                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-light" })
                </div>
            </form>
        </div>
    </div>
</div>