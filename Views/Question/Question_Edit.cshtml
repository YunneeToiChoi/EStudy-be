@model study4_be.Models.Question
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>


<div class="form-horizontal">
    <h4>Course</h4>
    <hr />
    <div class="card-body">
        <p class="card-description"> Edit</p>
        <form asp-action="Question_Edit" method="post" enctype="multipart/form-data" class="forms-sample">
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <label for="QuestionText">QuestionText</label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="QuestionParagraph">QuestionParagraph</label>
                <input asp-for="QuestionParagraph" class="form-control" />
                <span asp-validation-for="QuestionParagraph" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="QuestionImage">QuestionImage</label>
                <input asp-for="QuestionImage" class="form-control" />
                <span asp-validation-for="QuestionImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="QuestionTranslate">QuestionTranslate</label>
                <input asp-for="QuestionTranslate" class="form-control" />
                <span asp-validation-for="QuestionTranslate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionA">OptionA</label>
                <input asp-for="OptionA" class="form-control" />
                <span asp-validation-for="OptionA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionB">OptionB</label>
                <input asp-for="OptionB" class="form-control" />
                <span asp-validation-for="OptionB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionC">OptionC</label>
                <input asp-for="OptionC" class="form-control" />
                <span asp-validation-for="OptionC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionD">OptionD</label>
                <input asp-for="OptionD" class="form-control" />
                <span asp-validation-for="OptionD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CorrectAnswer">CorrectAnswer</label>
                <input asp-for="CorrectAnswer" class="form-control" />
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="flex">
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @Html.ActionLink("Cancel", "Question_List", "Question", null, new { @class = "btn btn-light" })
            </div>
        </form>
    </div>
</div>