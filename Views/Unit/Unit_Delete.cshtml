@model study4_be.Models.Unit

<h4>Delete Unit</h4>
<hr />
<div class="card-body">
    <p>Are you sure you want to delete this?</p>
    <div>
        <h4>@Model.UnitTittle</h4>
        <p>@Model.UnitId</p>
    </div>
    <form asp-action="Unit_Delete">
        <input type="hidden" asp-for="UnitId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Unit_List", null, new { @class = "btn btn-light" })
    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
