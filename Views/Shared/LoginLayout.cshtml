<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="/LayoutAdmin/assets/css/loading.css" />
</head>
<body>
    <!-- Màn hình loading -->
    <div class="parent-loading" id="loading-screen">
        <div class="loader">
            <span>Hello</span>
            <span>Hello</span>
        </div>
    </div>

    <div class="login-container" style="display: none;" id="main-content">
        @RenderBody() <!-- Nội dung của view -->
    </div>

    <script>
        // Hiển thị loading trong 5 giây rồi tắt
        window.addEventListener('load', () => {
            setTimeout(() => {
                const loadingScreen = document.getElementById('loading-screen');
                const mainContent = document.getElementById('main-content');

                // Ẩn màn hình loading với hiệu ứng mờ dần
                loadingScreen.style.opacity = '0';
                loadingScreen.style.transition = 'opacity 0.5s';

                // Sau khi hiệu ứng mờ kết thúc, ẩn loading và hiển thị nội dung chính
                setTimeout(() => {
                    loadingScreen.style.display = 'none';
                    mainContent.style.display = 'block'; // Hiển thị nội dung chính
                }, 500);
            }, 5000); // 5 giây
        });
    </script>
</body>
</html>
