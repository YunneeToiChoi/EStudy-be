@model study4_be.Models.Tag

<h4>Delete Tag</h4>
<hr />
<div class="card-body">
    <p>Are you sure you want to delete this?</p>
    <div>
        <h4>@Model.TagId</h4>
    </div>
    <form asp-action="Tag_Delete">
        <input type="hidden" asp-for="TagId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Tag_List", null, new { @class = "btn btn-light" })
    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>