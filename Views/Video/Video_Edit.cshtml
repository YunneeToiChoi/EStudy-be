@model study4_be.Models.ViewModel.VideoEditViewModel
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>


<div class="form-horizontal">
    <h4>Video</h4>
    <hr />
    <div class="card-body">
        <p class="card-description"> Edit</p>
        <form asp-action="Video_Edit" method="post" enctype="multipart/form-data" class="forms-sample">
            <input type="hidden" asp-for="video.VideoId" />
            <div class="form-group">
                <label asp-for="video.VideoUrl">VideoUrl</label>
                <input asp-for="video.VideoUrl" class="form-control" />
                <span asp-validation-for="video.VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="video.LessonId">Tag Tittle</label>
                <select asp-for="video.LessonId" class="form-control" asp-items="Model.lesson"></select>
                <span asp-validation-for="video.LessonId" class="text-danger"></span>
            </div>
            <div class="flex">
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @Html.ActionLink("Cancel", "Video_List", "Video", null, new { @class = "btn btn-light" })
            </div>
        </form>
    </div>
</div>