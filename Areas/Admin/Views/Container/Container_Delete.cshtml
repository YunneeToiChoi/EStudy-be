@model study4_be.Models.Container

<h4>Delete Container</h4>
<hr />
<div class="card-body">
    <p>Are you sure you want to delete this?</p>
    <div>
        <h4>@Model.ContainerId</h4>
        <h4>@Model.ContainerTitle</h4>
    </div>
    <form asp-action="Container_Delete">
        <input type="hidden" asp-for="ContainerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Container_List", null, new { @class = "btn btn-light" })
    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>