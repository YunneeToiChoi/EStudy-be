@model study4_be.Models.ViewModel.LessonCreateViewModel
<style>
    .flex {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }
</style>

<h2>Lesson Create</h2>


<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-body">
            <p class="card-description">Create </p>
            <form asp-action="Lesson_Create" method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label for="lesson.LessonType">LessonType</label>
                    <input asp-for="lesson.LessonType" class="form-control" />
                    <span asp-validation-for="lesson.LessonType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="lesson.LessonTitle">LessonTitle</label>
                    <input asp-for="lesson.LessonTitle" class="form-control" />
                    <span asp-validation-for="lesson.LessonTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lesson.ContainerId">Container id</label>
                    <select asp-for="lesson.ContainerId" class="form-control" asp-items="Model.container"></select>
                    <span asp-validation-for="lesson.ContainerId" class="text-danger"></span>
                </div>  
                <div class="form-group">
                    <label asp-for="lesson.TagId">Tag Tittle</label>
                    <select asp-for="lesson.TagId" class="form-control" asp-items="Model.tag"></select>
                    <span asp-validation-for="lesson.TagId" class="text-danger"></span>
                </div>
                <div class="flex">
                    <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                    @Html.ActionLink("Cancel", "Lesson_List", "Lesson", null, new { @class = "btn btn-light" })
                </div>
            </form>
        </div>
    </div>
</div>